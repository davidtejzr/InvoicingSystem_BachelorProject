@using TEJ0017_FakturacniSystem.Models.Subject
@model TEJ0017_FakturacniSystem.Models.Subject.OurCompany

@{
    ViewData["Title"] = "Šablona emailu";
    var ourCompany = ViewData["OurCompany"] as OurCompany;
}

<h1><i class="bi bi-gear"></i> Nastavení</h1>
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link" href="/Settings/OurCompanyEdit">Fakturační údaje</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/PaymentMethods">Platební metody</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/BankDetails">Bankovní účty</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Settings/DocumentSettings">Náležitosti dokladu</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="/Settings/EmailTemplate">Šablona E-mailu</a>
    </li>
</ul>

<br />
<h2><i class="bi bi-envelope"></i> Šablona emailu</h2>
<hr />

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
        <div>
            @ViewData["ErrorMessage"]
        </div>
    </div>
}

@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
        <div>
            @ViewData["SuccessMessage"]
        </div>
    </div>
}

<div class="col-md-8">
    <form asp-action="EmailTemplate">
        <div class="form-group">
            <label class="control-label">Předmět</label>
            <input type="text" name="emailSubject" class="form-control" value=@ourCompany.EmailSubject />
        </div>
        <div class="form-group">
            <label class="control-label">Text zprávy</label>
            <textarea name="emailText" class="form-control" rows="8">@ourCompany.EmailText</textarea>
        </div>
        <div class="form-group d-flex">
            <div class="ms-auto basicElementPadding">
                <input class="btn btn-primary" type="submit" value="Uložit změny"/>
            </div>
        </div>
    </form>
</div>