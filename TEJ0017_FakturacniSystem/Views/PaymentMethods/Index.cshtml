@model IEnumerable<TEJ0017_FakturacniSystem.Models.PaymentMethod.PaymentMethod>

@{
    ViewData["Title"] = "Platební metody";
}

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link" href="/Settings/OurCompanyEdit">Fakturační údaje</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="/PaymentMethods">Platební metody</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/BankDetails">Bankovní účty</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Settings/DocumentSettings">Nastavení dokladu</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Settings/EmailTemplate">Šablona E-mailu</a>
    </li>
</ul>

<br />
@if(TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
        <div>
            @TempData["SuccessMessage"]
        </div>
    </div>
}
<h1><i class="bi bi-cash-coin"></i> Platební metody</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus"></i>Nová platební metoda</a>
</p>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsBank)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model)
    {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PaymentMethodId">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsBank)
                </td>
                <td>
                    <a data-bs-placement="bottom" class="class="link-primary" title="Odstranění platební metody" data-bs-toggle="modal" data-bs-target="#removeModal" data-bs-whatever="@item.PaymentMethodId"><i class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="removeModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="removeModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="removeModalLabel">Odstranění platební metody</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">Chcete opravdu odstranit tuto platební metodu?</div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Storno</button>
        <form method="post" id="recordDelForm" asp-action="Delete">
            <button type="submit" class="btn btn-danger">Odstranit</button>
        </form>
      </div>
    </div>
  </div>
</div>
