@model TEJ0017_FakturacniSystem.Models.PaymentMethod.PaymentMethod

@{
    ViewData["Title"] = "Úprava platební metody";
}

<h1><i class="bi bi-cash-coin"></i> Úprava platební metody</h1>
<hr />
<div class="row">
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
            <div>
                @ViewData["ErrorMessage"]
            </div>
        </div>
    }

    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IsVisible" value="true" />
            <input type="hidden" asp-for="PaymentMethodId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsBank" />Bankovní platební metoda
                </label>
            </div>
            <div class="form-group d-flex basicElementPadding">
                <div class="ms-auto" style="padding-right: 10px;">
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle"></i> Storno</a>
                </div>
                <div>
                    <input type="submit" value="Uložit změny" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
