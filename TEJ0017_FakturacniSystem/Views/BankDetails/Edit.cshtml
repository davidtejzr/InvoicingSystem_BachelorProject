@model TEJ0017_FakturacniSystem.Models.PaymentMethod.BankDetail

@{
    ViewData["Title"] = "Editace bankovního účtu";
}

<h1><i class="bi bi-credit-card"></i> Editace bankovního účtu</h1>
<hr />
<div class="row">
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
            <div>
                @ViewData["ErrorMessage"]
            </div>
        </div>
    }

    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PaymentMethodId" />
            <input type="hidden" asp-for="IsVisible" value="true" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Název účtu</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="form-group col">
                    <label asp-for="AccountNumber" class="control-label"></label>
                    <input asp-for="AccountNumber" class="form-control" />                 
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="BankCode" class="control-label"></label>
                    <input asp-for="BankCode" class="form-control" />   
                </div>
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
                <span asp-validation-for="BankCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BankName" class="control-label"></label>
                <input asp-for="BankName" id="bankName" class="form-control" />
                <span asp-validation-for="BankName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Swift" class="control-label"></label>
                <input asp-for="Swift" id="bankSwift" class="form-control" />
                <span asp-validation-for="Swift" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Iban" class="control-label"></label>
                <input asp-for="Iban" class="form-control" />
                <span asp-validation-for="Iban" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group d-flex basicElementPadding">
                <div class="ms-auto" style="padding-right: 10px;">
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle"></i> Storno</a>
                </div>
                <div>
                    <input type="submit" value="Uložit změny" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

