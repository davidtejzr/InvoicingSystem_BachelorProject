@model IEnumerable<TEJ0017_FakturacniSystem.Models.User.User>

@{
    ViewData["Title"] = "Index";
}

@if(TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
        <div>
            @TempData["SuccessMessage"]
        </div>
    </div>
}

<h1><i class="bi bi-people-fill"></i> Uživatelé</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus"></i>Nový uživatel</a>
</p>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Login)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telephone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastLoginTmstmp)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model)
    {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserId">@Html.DisplayFor(modelItem => item.Login)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastLoginTmstmp)
                </td>
                <td>
                    <a data-bs-placement="bottom" class="class="link-primary" title="Odstranění uživatele" data-bs-toggle="modal" data-bs-target="#removeModal" data-bs-whatever="@item.UserId"><i class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="removeModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="removeModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="removeModalLabel">Odstranění uživatele</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">Chcete opravdu odstranit tohoto uživatele?</div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Storno</button>
        <form method="post" id="recordDelForm" asp-action="Delete">
            <button type="submit" class="btn btn-danger">Odstranit</button>
        </form>
      </div>
    </div>
  </div>
</div>

