@model TEJ0017_FakturacniSystem.Models.User.User

@{
    ViewData["Title"] = "Profil";
}

<h1><i class="bi bi-person-fill"></i> Profil</h1>
<hr />
@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
        <div>
            @ViewData["ErrorMessage"]
        </div>
    </div>
}

@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
        <div>
            @ViewData["SuccessMessage"]
        </div>
    </div>
}


<div class="col-md-10">
    <form asp-action="Profil">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IsVisible" value="true" />
        <div class="row">
            <div class="col">
                <h4>Uživatelské údaje</h4>
                <input type="hidden" asp-for="UserId" />
                <div class="form-group">
                    <label class="control-label">Typ uživatele</label>
                    <input class="form-control" value=@ViewBag.UserType name="AccountType" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label"></label>
                    <input asp-for="Login" class="form-control" readonly/>
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telephone" class="control-label"></label>
                    <input asp-for="Telephone" class="form-control" type="tel" />
                    <span asp-validation-for="Telephone" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <h4>Zabezpečení</h4>
                <div class="form-group">
                    <label class="control-label">Původní heslo</label>
                    <input name="OldPassword" class="form-control" type="password" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordVerify" class="control-label"></label>
                    <input asp-for="PasswordVerify" class="form-control" type="password" />
                    <span asp-validation-for="PasswordVerify" class="text-danger"></span>
                </div>
                <h4 class="basicElementPadding">Informace o účtu</h4>
                <div class="form-group">
                    <label asp-for="RegisteredTmpstmp" class="control-label"></label>
                    <input asp-for="RegisteredTmpstmp" class="form-control" type="datetime-local" readonly />
                    <span asp-validation-for="RegisteredTmpstmp" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastLoginTmstmp" class="control-label"></label>
                    <input asp-for="LastLoginTmstmp" class="form-control" type="datetime-local" readonly />
                    <span asp-validation-for="LastLoginTmstmp" class="text-danger"></span> 
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group d-flex basicElementPadding">
                <div class="ms-auto">
                    <input type="submit" value="Uložit změny" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>